<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order.OrderCompleteActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="주문 완료"
            android:textSize="31dp"
            android:fontFamily="@font/truckin"/>

    </RelativeLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주문 번호"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_orderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345621"
                android:textSize="20dp" />

        </LinearLayout>






    </LinearLayout>

    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="배송지"
                android:textSize="20dp" />



        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="이름"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="폰번호"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_main_address"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="메인주소"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_sub_address"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="서브주소"
                android:textSize="18dp" />





        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="총 결제금액"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="총 상품금액"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="배송비"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            >

            <TextView
                android:id="@+id/tv_pay_price"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="1000000 원"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="10000 원"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_delivery_tip"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="2500 원"
                android:textSize="18dp" />






        </LinearLayout>





</LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/truckin"
            android:text="IPPDA"
            android:textSize="50dp" />


    </RelativeLayout>


</LinearLayout>