<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    tools:context=".login.SignUpActivity"
    android:layout_gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="33dp"
            android:text="IPPDA"
            android:fontFamily="@font/truckin"
            android:layout_width="wrap_content"
            android:layout_height="130dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="회원가입"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginBottom="30dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <EditText
                android:paddingLeft="10dp"
                android:inputType="textMultiLine|textNoSuggestions"
                android:background="@drawable/radius"
                android:maxLines="1"
                android:maxLength="6"
                android:textColorHint="#75000000"
                android:hint="사용할 아이디 입력"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <Button
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:background="@drawable/custom_button"
                android:layout_centerVertical="true"
                android:backgroundTint="#C8C8C8"
                android:textSize="12dp"
                android:textColor="#0E0E0E"
                android:layout_alignParentRight="true"
                android:text="중복확인"
                android:layout_width="110dp"
                android:layout_height="35dp"/>
        </RelativeLayout>

        <EditText
            android:layout_marginBottom="30dp"
            android:paddingLeft="10dp"
            android:inputType="textMultiLine|textNoSuggestions"
            android:background="@drawable/radius"
            android:maxLines="1"
            android:maxLength="20"
            android:textColorHint="#75000000"
            android:hint="닉네임"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical">
        <EditText
            android:id="@+id/edt_pw"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:background="@drawable/radius"
            android:maxLines="1"
            android:maxLength="16"
            android:textColorHint="#75000000"
            android:hint="비밀번호"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/feedback"
            android:textColor="#F44336"
            android:text="영문, 숫자, 특수문자 8~16자리를 입력해주세요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="vertical">
        <EditText
            android:id="@+id/edt_pw_check"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:background="@drawable/radius"
            android:maxLines="1"
            android:maxLength="16"
            android:textColorHint="#75000000"
            android:hint="비밀번호 확인"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/feedback2"
            android:textColor="#4CAF50"
            android:text="비밀번호와 일치합니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <EditText
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:inputType="textMultiLine|textNoSuggestions"
            android:background="@drawable/radius"
            android:maxLines="1"
            android:maxLength="20"
            android:textColorHint="#75000000"
            android:hint="이메일"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>


        <TextView
            android:paddingLeft="3dp"
            android:layout_marginBottom="3dp"
            android:text="생년월일 입력(선택사항)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_birth_date"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            android:textColor="#75000000"
            android:text="생년월일 입력"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:background="@drawable/radius"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />


        <Button
            android:id="@+id/btn_signup"
            android:layout_gravity="center"
            android:background="@drawable/button_radius"
            android:textColor="#0E0E0E"
            android:text="가입하기"
            android:layout_width="320dp"
            android:layout_height="50dp"/>
    </LinearLayout>



</LinearLayout>