<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignUpActivity"
   >

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="33dp"
            android:text="IPPDA"
            android:fontFamily="@font/truckin"
            android:layout_width="wrap_content"
            android:layout_height="130dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="회원가입"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:text="아이디"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <EditText
                    android:layout_alignParentRight="true"
                    android:id="@+id/member_id"
                    android:paddingLeft="10dp"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:background="@drawable/radius"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textColorHint="#75000000"
                    android:hint="사용할 아이디 입력"
                    android:layout_width="260dp"
                    android:layout_height="40dp"/>
                <TextView
                    android:id="@+id/btn_id_check"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="#C8C8C8"
                    android:textColor="#0E0E0E"
                    android:layout_alignParentRight="true"
                    android:text="중복확인"
                    android:layout_width="50dp"
                    android:layout_height="20dp"/>
        </RelativeLayout>

        <TextView
            android:layout_marginLeft="100dp"
            android:text="이건 테스트 입니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:text="닉네임"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:inputType="textMultiLine|textNoSuggestions"
                android:background="@drawable/radius"
                android:maxLines="1"
                android:maxLength="20"
                android:textColorHint="#75000000"
                android:hint="닉네임"
                android:layout_width="260dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_centerVertical="true"
                android:textSize="15dp"
                android:text="비밀번호"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_alignParentRight="true"
                android:id="@+id/edt_pw"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:background="@drawable/radius"
                android:maxLines="1"
                android:maxLength="16"
                android:textColorHint="#75000000"
                android:hint="비밀번호"
                android:layout_width="260dp"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <TextView
            android:layout_marginLeft="100dp"
            android:text="이건 테스트 입니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:text="비밀번호\n\t 확인"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/edt_pw_check"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:background="@drawable/radius"
            android:maxLines="1"
            android:maxLength="16"
            android:textColorHint="#75000000"
            android:hint="비밀번호 확인"
            android:layout_width="260dp"
            android:layout_height="40dp"/>
        </RelativeLayout>
        <TextView
            android:layout_marginLeft="100dp"
            android:text="이건 테스트 입니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <TextView
               android:textSize="15dp"
               android:layout_centerVertical="true"
               android:text="이메일"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
        <EditText
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:inputType="textMultiLine|textNoSuggestions"
            android:background="@drawable/radius"
            android:maxLines="1"
            android:maxLength="50"
            android:textColorHint="#75000000"
            android:hint="이메일"
            android:layout_width="260dp"
            android:layout_height="40dp"/>
        </RelativeLayout>




        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:gravity="center"
                android:layout_weight="5"
                android:background="@drawable/radius"
                android:id="@+id/radio_gender"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/check_man"
                    android:layout_marginRight="20dp"

                    android:text="남"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/check_woman"

                    android:text="여"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <TextView
                android:layout_weight="5"
                android:id="@+id/tv_birth_date"
                android:gravity="center_vertical"
                android:textColor="#75000000"
                android:text="생년월일 입력"
                android:textSize="18dp"
                android:paddingLeft="10dp"
                android:background="@drawable/radius"
                android:layout_width="0dp"
                android:layout_height="40dp"
                />
        </LinearLayout>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btn_signup"
            android:layout_gravity="center"
            android:background="@drawable/button_radius"
            android:textColor="#0E0E0E"
            android:text="가입하기"
            android:layout_width="320dp"
            android:layout_height="50dp"/>
    </LinearLayout>


    </LinearLayout>


</FrameLayout>