<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    tools:context=".login.FindActivity"
    android:layout_gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="33dp"
            android:text="IPPDA"
            android:fontFamily="@font/truckin"
            android:layout_width="wrap_content"
            android:layout_height="130dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/pretendard_light"
                android:textColor="#8A8A8A"
                android:id="@+id/tv_find_id"
                android:textSize="20dp"
                android:text="아이디 찾기 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="20dp"
                android:text=" / "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_find_pw"
                android:textSize="20dp"
                android:text=" 비밀번호 찾기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_phone"
            android:checked="true"
            android:buttonTint="@color/white"
            android:button="@drawable/checked"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:text="\t휴대폰 번호로 찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/check_email"
            android:buttonTint="@color/white"
            android:button="@drawable/unchecked"
            android:textColor="@color/white"
            android:text="\t이메일 주소로 찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_id"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:inputType="textMultiLine|textNoSuggestions"
            android:background="@drawable/radius"
            android:maxLines="1"
            android:maxLength="30"
            android:textColorHint="#75000000"
            android:hint="아이디"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/edt_name"
            android:paddingLeft="10dp"
            android:inputType="textMultiLine|textNoSuggestions"
            android:background="@drawable/radius"
            android:maxLines="1"
            android:maxLength="20"
            android:textColorHint="#75000000"
            android:hint="이름"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <RelativeLayout
            android:layout_marginVertical="20dp"
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_phonenum"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:background="@drawable/radius"
                android:maxLines="1"
                android:maxLength="15"
                android:textColorHint="#75000000"
                android:hint="휴대폰 번호"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <Button
                android:id="@+id/btn_phonecheck"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_button"
                android:layout_centerVertical="true"
                android:backgroundTint="#C8C8C8"
                android:textSize="12dp"
                android:textColor="#0E0E0E"
                android:layout_alignParentRight="true"
                android:text="인증번호 발송"
                android:layout_width="110dp"
                android:layout_height="35dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edt_phonenum_check"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:background="@drawable/radius"
                android:maxLines="1"
                android:maxLength="6"
                android:textColorHint="#75000000"
                android:hint="인증번호 6자리"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <Button
                android:id="@+id/btn_phonecheck_last"
                android:layout_marginRight="5dp"
                android:background="@drawable/custom_button"
                android:layout_centerVertical="true"
                android:backgroundTint="#C8C8C8"
                android:textSize="12dp"
                android:textColor="#0E0E0E"
                android:layout_alignParentRight="true"
                android:text="인증하기"
                android:layout_width="110dp"
                android:layout_height="35dp"/>

        </RelativeLayout>


        <Button
            android:id="@+id/btn_next"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_radius"
            android:layout_gravity="center"
            android:textColor="#0E0E0E"
            android:text="다음"
            android:layout_width="320dp"
            android:layout_height="50dp"/>


    </LinearLayout>



</LinearLayout>