<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    tools:context=".login.FindActivity"
    android:layout_gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="33dp"
            android:text="IPPDA"
            android:fontFamily="@font/truckin"
            android:layout_width="wrap_content"
            android:layout_height="130dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="비밀번호 찾기 결과"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:textSize="16dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textColor="#010101"
                android:text="아이디"
                android:layout_width="0dp"
                android:layout_height="50dp"/>

            <EditText
                android:background="@null"
                android:gravity="center"
                android:textColor="#000"
                android:hint="아이디치는 곳 입니다"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:textSize="16dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textColor="#010101"
                android:text="새 비밀번호"
                android:layout_width="0dp"
                android:layout_height="50dp"/>

            <EditText
                android:background="@null"
                android:gravity="center"
                android:textColor="#000"
                android:hint="비밀번호"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_marginBottom="15dp"
            android:paddingLeft="10dp"
            android:id="@+id/feedback"
            android:textColor="#F44336"
            android:text="영문, 숫자, 특수문자 8~16자리를 입력해주세요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="2"
                android:textSize="16dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textColor="#010101"
                android:text="새 비밀번호 확인"
                android:layout_width="0dp"
                android:layout_height="50dp"/>

            <EditText
                android:background="@null"
                android:gravity="center"
                android:textColor="#000"
                android:hint="새비밀번호 치는곳 입니다"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/feedback2"
            android:textColor="#4CAF50"
            android:text="비밀번호와 일치합니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:id="@+id/btn_activitylogin"
            android:layout_gravity="center"
            android:background="@drawable/button_radius"
            android:textColor="#0E0E0E"
            android:text="로그인 하러가기"
            android:layout_marginTop="20dp"
            android:layout_width="320dp"
            android:layout_height="50dp"/>

    </LinearLayout>



</LinearLayout>