<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    tools:context=".login.FindActivity"
    android:layout_gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="33dp"
            android:text="IPPDA"
            android:fontFamily="@font/truckin"
            android:layout_width="wrap_content"
            android:layout_height="130dp"/>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="아이디 찾기 결과"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="18dp"
            android:gravity="center"
            android:text="회원님의 정보로 \n가입된 아이디가 있습니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_member_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="TestID1234"
            android:textSize="16dp" />


        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_member_id"
            android:layout_marginLeft="50dp"
            android:id="@+id/tv_create"
            android:textColor="#EAE9E9"
            android:text="2022-08-08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/find_pw"
        android:layout_gravity="center"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="15dp"
        android:layout_width="220dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="비밀번호를 잊으셨나요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignParentRight="true"
            android:text="비밀번호 찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_activitylogin"
        android:layout_gravity="center"
        android:background="@drawable/button_radius"
        android:textColor="#0E0E0E"
        android:text="로그인 하러가기"
        android:layout_width="320dp"
        android:layout_height="50dp"/>


</LinearLayout>