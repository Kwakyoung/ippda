<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order.OrderActivity"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:textSize="25dp"
            android:layout_centerInParent="true"
            android:text="주문하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
        android:layout_marginVertical="10dp"
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp">
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="배송지 정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/btn_change_address"
                android:layout_alignParentRight="true"
                android:textColor="@color/green"
                android:text="변경하기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <View
            android:layout_marginVertical="10dp"
            android:background="#666"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_member_name"
                android:text="곽영균"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_member_phone"
                android:layout_marginLeft="5dp"
                android:text="01034481720"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_member_address"
            android:layout_marginHorizontal="10dp"
            android:text="광주 서구 풍금로 11번길 6-10, 201호"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginVertical="30dp"
            android:background="#BFBFBF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="배송 요청사항"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/btn_change_request"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/green"
                    android:text="변경하기"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


            <View
                android:layout_marginVertical="10dp"
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <TextView
                android:layout_marginHorizontal="10dp"
                android:text="문앞에 놓아주세요."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:layout_marginVertical="30dp"
            android:background="#BFBFBF"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="주문 상품 정보"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


            <View
                android:layout_marginVertical="10dp"
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recv_order_goods"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginHorizontal="10dp">


           </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

        <View
            android:layout_marginVertical="30dp"
            android:background="#BFBFBF"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="결제수단"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginVertical="10dp"
                    android:background="#666"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radiogroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/radio_ippdapay"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:text="입다페이"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:id="@+id/ln_ippdapay"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:background="@drawable/radius">

                            <RelativeLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_centerVertical="true"
                                    android:textSize="16dp"
                                    android:textColor="#010101"
                                    android:text="잔액"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_marginRight="5dp"
                                    android:layout_toLeftOf="@id/won"
                                    android:textSize="18dp"
                                    android:textColor="#010101"
                                    android:fontFamily="@font/pretendard_bold"
                                    android:text="0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_centerVertical="true"
                                    android:textSize="16dp"
                                    android:id="@+id/won"
                                    android:textColor="#010101"
                                    android:layout_alignParentRight="true"
                                    android:text="원"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <View
                                android:layout_marginTop="5dp"
                                android:background="#666"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"/>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:textColor="#515151"
                                    android:text="충전하기"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:textColor="@color/green"
                                    android:text="사용하기"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>

                        <RadioButton
                            android:textSize="15dp"
                            android:id="@+id/radio_pay"
                            android:textColor="@color/white"
                            android:text="다른 결제 수단"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/ln_pay"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:background="@drawable/radius"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:src="@drawable/kakaopay"
                                    android:layout_width="70dp"
                                    android:layout_height="60dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginLeft="3dp"
                                android:gravity="center"
                                android:background="@drawable/radius"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:src="@drawable/naverpay1"
                                    android:layout_width="70dp"
                                    android:layout_height="60dp"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:background="@drawable/radius"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:src="@drawable/tospay"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginLeft="3dp"
                                android:gravity="center"
                                android:background="@drawable/radius"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="60dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:textColor="#010101"
                                    android:textSize="15dp"
                                    android:text="신용/체크카드"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>



        </LinearLayout>

        <View
            android:layout_marginVertical="30dp"
            android:background="#BFBFBF"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>


        <Button
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/radius"
            android:text="결제하기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    </ScrollView>
</LinearLayout>