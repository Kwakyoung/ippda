<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginBottom="20dp">
    <TextView
        android:id="@+id/insertDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2000-03-30"
        android:paddingTop="5dp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginRight="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imgGoodsList"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/ic_launcher_background"/>
            <ImageButton
                android:id="@+id/btn_hart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="@drawable/ic_like_green"/>
            <ImageButton
                android:id="@+id/btn_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="@drawable/ic_star"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입다 화정점"
                android:textSize="11dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/goodsName"
                android:layout_width="73dp"
                android:layout_height="31dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="입다 맨투맨"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/choiceNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수량 1개 | M "
                    android:textColor="#6A6A6A"
                    android:textSize="12dp"/>
                <TextView
                    android:id="@+id/goodsCnt"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2개 남음"
                    android:textColor="#FF6600"
                    android:textSize="12dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/btn_cancle"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancel"/>
            <TextView
                android:id="@+id/goodsPrice"
                android:layout_gravity="right"
                android:layout_marginTop="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300000원"
                android:textSize="17dp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>