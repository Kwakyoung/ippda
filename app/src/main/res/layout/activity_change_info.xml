<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.ChangeInfoActivity"
    android:orientation="vertical"
    android:paddingTop="20dp"
    >


    <LinearLayout
        android:gravity="center"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/imgv_back"
            android:src="@drawable/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20dp"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:layout_weight="1"
            android:text="회원정보 수정"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/complete"
            android:textColor="@color/green"
            android:text="완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginVertical="10dp"
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/profile_circle"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </RelativeLayout>

    <View
        android:layout_marginVertical="10dp"
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center|left"
            android:textSize="16dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:backgroundTint="#D8D8D8"
            android:background="@drawable/radius"
            android:textColor="#101010"
            android:text="이름은 변경불가"
            android:layout_width="270dp"
            android:layout_height="40dp"/>


    </RelativeLayout>


    <View
        android:layout_marginVertical="10dp"
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="이메일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:inputType="textMultiLine|textNoSuggestions|textEmailAddress"
            android:background="@drawable/radius"
            android:maxLines="1"
            android:maxLength="50"
            android:textColorHint="#75000000"
            android:hint="이메일은 변경가능@naver.com"
            android:layout_width="270dp"
            android:layout_height="40dp"/>
    </RelativeLayout>

    <View
        android:layout_marginVertical="10dp"
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="아이디"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:inputType="textMultiLine|textNoSuggestions"
            android:background="@drawable/radius"
            android:maxLines="1"
            android:maxLength="20"
            android:textColorHint="#75000000"
            android:hint="유저의 아이디 변경가능"
            android:layout_width="270dp"
            android:layout_height="40dp"/>
    </RelativeLayout>

    <View
        android:layout_marginVertical="10dp"
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="생년월일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_birth_date"
            android:textSize="16dp"
            android:gravity="center|left"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:background="@drawable/radius"
            android:textColor="#75000000"
            android:text="생년월일 입력"
            android:layout_width="270dp"
            android:layout_height="40dp"/>


    </RelativeLayout>

    <View
        android:layout_marginVertical="10dp"
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gender"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:text="성별"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/gender"
            android:textColor="#A3A3A3"
            android:text="(선택)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="16dp"
            android:gravity="center|left"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:background="@drawable/radius"
            android:textColor="#75000000"
            android:text="성별 입력"
            android:layout_width="270dp"
            android:layout_height="40dp"/>
    </RelativeLayout>

    <View
        android:layout_marginVertical="10dp"
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="40dp">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/body"
            android:textSize="16dp"
            android:text="내 신체사이즈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/body"
            android:textColor="#A3A3A3"
            android:text="(선택)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <EditText
            android:textSize="16dp"
            android:textColorHint="#75000000"
            android:hint="키"
            android:inputType="number"
            android:maxLength="3"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:id="@+id/edt_cm"
            android:layout_toLeftOf="@id/cm"
            android:background="@drawable/radius"
            android:layout_width="60dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/cm"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/edt_kg"
            android:text="cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:textSize="16dp"
            android:textColorHint="#75000000"
            android:hint="몸무게"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="3"
            android:layout_marginRight="5dp"
            android:id="@+id/edt_kg"
            android:layout_toLeftOf="@id/kg"
            android:background="@drawable/radius"
            android:layout_width="60dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/kg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>